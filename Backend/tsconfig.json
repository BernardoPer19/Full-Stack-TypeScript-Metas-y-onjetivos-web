{
  "compilerOptions": {
    // üìÅ Estructura del proyecto
    "rootDir": "./",               // Carpeta ra√≠z del proyecto fuente
    "outDir": "dist",              // Carpeta donde se guarda el JS compilado

    // üß† Nivel del JavaScript de salida y sistema de m√≥dulos
    "target": "ES2020",            // Versi√≥n moderna de JS (async/await, etc.)
    "module": "commonjs",          // M√≥dulos compatibles con Node.js
    "moduleResolution": "node",    // C√≥mo resolver imports, usando l√≥gica de Node.js

    // ‚úÖ Seguridad en el tipado
    "strict": true,                // Activa todas las comprobaciones estrictas
    "noUnusedLocals": true,        // Error si declar√°s una variable que no us√°s
    "noUnusedParameters": true,    // Error si declar√°s par√°metros que no se usan
    "noImplicitReturns": true,     // Error si una funci√≥n puede no devolver nada
    "noFallthroughCasesInSwitch": true, // Error si te olvid√°s un `break` en switch

    // ‚öôÔ∏è Configuraciones √∫tiles para evitar problemas
    "esModuleInterop": true,       // Permite importar m√≥dulos CommonJS con `import x from`
    "allowSyntheticDefaultImports": true, // Permite importar sin tener que usar `.default`
    "resolveJsonModule": true,     // Permite importar archivos JSON
    "skipLibCheck": true,          // Omite revisar los `.d.ts` de librer√≠as externas
    "isolatedModules": true,       // Cada archivo act√∫a como un m√≥dulo aislado
    "types": ["node"],             // Carga los tipos de Node.js

    // üõë Muy recomendado para detectar errores
    "noEmitOnError": true    ,      // üö® No compila si hay errores (esto te faltaba)
    "typeRoots": ["./src/types", "./node_modules/@types"] 
  },
  "include": ["src"],              // Solo compilar archivos dentro de /src
  "exclude": ["node_modules"]      // Ignora esta carpeta
}
